<%= form_for [:organiser, @service] do |f| %>
    <%= render "shared/errors", model: @service %>

    <div class="govuk-form-group">
        <%= f.label :name, class: "govuk-label" %>
        <%= f.text_field :name, class: "govuk-input govuk-input--width-20" %>
    </div>
    
    <div class="govuk-form-group">
        <%= f.label :price, class: "govuk-label" %>
        <div class="govuk-input__wrapper">
            <div class="govuk-input__prefix" aria-hidden="true">Â£</div>
            <%= f.number_field :price, min: 0, step: 0.01, class: "govuk-input govuk-input--width-5" %>
        </div>
    </div>
    
    <%= f.submit class: "govuk-button" %>
<% end %>