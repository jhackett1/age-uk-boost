<%= form_for [:organiser, @order] do |f| %>
    <%= render "shared/errors", model: @order %>

    <%= f.label :approved_at %>
    <br/>
    <%= f.check_box :approved_at, {checked: @order.approved_at.present?}, Time.now %>
    <br/>

    <%= f.label :urgent %>
    <br/>
    <%= f.check_box :urgent %>
    <br/>

    <div class="govuk-form-group">
        <%= f.label :client_id, class: "govuk-label" %>
        <%= f.collection_select :client_id, User.has_role("client"), :id, :display_name, {}, {class: "govuk-select"} %>
    </div>

    <div class="govuk-form-group">
        <%= f.label :assignee_id, class: "govuk-label" %>
        <%= f.collection_select :assignee_id, User.has_role("volunteer"), :id, :display_name, {include_blank: "â€”" }, {class: "govuk-select"} %>
    </div>

    <%= f.label :service_ids %>
    <br/>
    <%= f.collection_check_boxes :service_ids, Service.all, :id, :name %>
    <br/>

    <%= f.submit class: "govuk-button" %>
<% end %>