<%= form_for [:organiser, @order] do |f| %>
    <%= render "shared/errors", model: @order %>

    <%= f.label :approved %>
    <br/>
    <%= f.check_box :approved %>
    <br/>

    <%= f.label :urgent %>
    <br/>
    <%= f.check_box :urgent %>
    <br/>

    <%= f.label :client_id %>
    <br/>
    <%= f.collection_select :client_id, User.has_role("client"), :id, :display_name %>
    <br/>

    <%= f.label :assignee_id %>
    <br/>
    <%= f.collection_select :assignee_id, User.has_role("volunteer"), :id, :display_name, include_blank: "â€”" %>
    <br/>

    <%= f.label :service_ids %>
    <br/>
    <%= f.collection_check_boxes :service_ids, Service.all, :id, :name %>
    <br/>

    <%= f.submit %>
<% end %>