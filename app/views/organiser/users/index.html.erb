<h1>Users</h1>

<%= link_to "Add a new user", new_organiser_user_path %>

<table>
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Postcode</th>
            <th scope="col">Joined</th>
        <tr/>
    </thead>
    <tbody>
        <% @users.each do |u| %>
            <tr>
                <td><%= link_to u.display_name, organiser_user_path(u) %></td>
                <td><%= u.email %></td>
                <td><%= u.role.name.humanize %></td>
                <td><%= u.phone %></td>
                <td><%= u.address %></td>
                <td><%= u.postcode %></td>
                <td><%= time_ago_in_words(u.created_at).humanize %> ago</td>
            </tr>
        <% end %>
    </tbody>
</table>

<script>
    __MARKERS__ = <%= raw @users.to_json %>
</script>

<div id="map" style="height: 300px; width: 400px;"></div>