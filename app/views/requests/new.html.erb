<h1>New request for help</h1>

<%= form_for [:organiser, @user] do |f| %>
    <%= render "shared/errors", model: @user %>

    <%= f.label :first_name %>
    <br/>
    <%= f.text_field :first_name %>
    <br/>

    <%= f.label :last_name %>
    <br/>
    <%= f.text_field :last_name %>
    <br/>

    <%= f.label :email %>
    <br/>
    <%= f.text_field :email %>
    <br/>

    <%= f.label :phone %>
    <br/>
    <%= f.text_field :phone %>
    <br/>

    <%= f.label :address %>
    <br/>
    <%= f.text_field :address %>
    <br/>

    <%= f.label :postcode %>
    <br/>
    <%= f.text_field :postcode %>
    <br/>

    <%= f.fields_for :order do |ff| %>

        <%= ff.label :urgent %>
        <br/>
        <%= ff.check_box :urgent %>
        <br/>

        <%= ff.label :service_ids %>
        <br/>
        <%= ff.collection_check_boxes :service_ids, Service.all, :id, :name %>
        <br/>

    <% end %>

    <%= f.submit %>
<% end %>