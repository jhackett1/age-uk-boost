<% if model.errors.any? %>
    <div class="error">
        <h2 class="error__title"><%= pluralize(model.errors.count, "error") %> stopped this <%= model.class.model_name.human.downcase %> being saved:</h2>
        <ul class="error__list">
            <% model.errors.full_messages.each do |e| %>
                <li><%= e %></li>
            <% end %>
        </ul>
    </div>
<% end %>